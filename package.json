{
  "name": "tagpay",
  "version": "1.0.0",
  "description": "TagPay is a modern financial technology application designed to streamline digital payments, enhance financial management, and empower users with secure and efficient transaction tools.",
  "main": "index.js",
  "private": true,
  "packageManager": "npm@8.17.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "start:env": "node scripts/start.js",
    "start:server": "npm run dev --workspace=@tagpay/server",
    "start:admin": "npm run dev --workspace=@tagpay/admin",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:script": "./scripts/docker.sh",
    "skaffold:dev": "./scripts/skaffold-dev.sh dev",
    "skaffold:dev:hot": "./scripts/skaffold-dev.sh dev local-dev",
    "skaffold:run": "./scripts/skaffold-dev.sh run",
    "skaffold:build": "./scripts/skaffold-dev.sh build",
    "skaffold:deploy": "./scripts/skaffold-dev.sh deploy",
    "skaffold:cleanup": "./scripts/skaffold-dev.sh cleanup",
    "skaffold:status": "./scripts/skaffold-dev.sh status",
    "skaffold:logs": "./scripts/skaffold-dev.sh logs",
    "commit": "git-cz",
    "commit:check": "commitlint --from HEAD~1 --to HEAD --verbose",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TagPay-ict/tagpay.git"
  },
  "keywords": [
    "Finance"
  ],
  "author": "Ralph https://github.com/wealthralph",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TagPay-ict/tagpay/issues"
  },
  "homepage": "https://github.com/TagPay-ict/tagpay#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "3.5.3",
    "turbo": "^2.4.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
